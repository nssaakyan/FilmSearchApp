<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topAppBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/rectangle_no_radius"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@drawable/ic_baseline_menu_24"
            app:title="@string/app_desc"
            app:titleTextColor="@color/DarkBlue" />

    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:id="@+id/image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/AppBar"
        app:layout_constraintBottom_toTopOf="@id/posters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView"
        android:layout_marginBottom="@dimen/img_marg"
        android:src="@drawable/lavender" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_value_1"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/resource"
        android:textColor="@color/DarkBlue"
        android:textSize="@dimen/text_link_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/posters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/small_value_1"
        android:layout_marginBottom="@dimen/small_value_1"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layoutAnimation="@anim/posters_animation">


        <androidx.cardview.widget.CardView
            android:id="@+id/posters_1"
            app:layout_constraintTop_toTopOf="@id/posters"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintEnd_toStartOf="@id/posters_2"
            app:layout_constraintStart_toStartOf="@id/posters"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="@dimen/small_value_1"
            app:cardCornerRadius="@dimen/radius"
            app:layout_constraintHorizontal_chainStyle="spread">

            <ImageView
                android:id="@+id/poster_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/puss_in_boots"
                android:stateListAnimator="@animator/animator"
                android:focusable="true" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/posters_2"
            app:layout_constraintTop_toTopOf="@id/posters"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintStart_toEndOf="@id/posters_1"
            app:layout_constraintEnd_toStartOf="@id/posters_3"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="@dimen/small_value_1"
            app:cardCornerRadius="@dimen/radius"
            app:layout_constraintHorizontal_chainStyle="spread">

            <ImageView
                android:id="@+id/poster_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/avatar"
                android:stateListAnimator="@animator/animator" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/posters_3"
            app:layout_constraintTop_toTopOf="@id/posters"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintStart_toEndOf="@id/posters_2"
            app:layout_constraintEnd_toStartOf="@id/posters_4"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="@dimen/small_value_1"
            app:cardCornerRadius="@dimen/radius"
            app:layout_constraintHorizontal_chainStyle="spread">

            <ImageView
                android:id="@+id/poster_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/elvis"
                android:stateListAnimator="@animator/animator" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/posters_4"
            app:layout_constraintTop_toTopOf="@id/posters"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintStart_toEndOf="@id/posters_3"
            app:layout_constraintEnd_toEndOf="@id/posters"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="@dimen/small_value_1"
            app:cardCornerRadius="@dimen/radius"
            app:layout_constraintHorizontal_chainStyle="spread">

            <ImageView
                android:id="@+id/poster_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/batman"
                android:stateListAnimator="@animator/animator" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_no_radius"
        app:itemTextColor="@color/DarkBlue"
        app:itemIconTint="@color/DarkBlue"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>